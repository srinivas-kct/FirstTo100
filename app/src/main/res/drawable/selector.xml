<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="20dp" />
            <solid
                android:color="@android:color/holo_green_dark" />
            <stroke
                android:color="#C39BD3"
                android:width="2dp" />
            <size
                android:width="165dp"
                android:height="40dp" />
        </shape>
    </item> <!-- pressed -->
    <item android:state_focused="true">
        <shape>
            <corners
                android:radius="20dp" />
            <solid
                android:color="@android:color/holo_blue_dark" />
            <stroke
                android:color="#C39BD3"
                android:width="2dp" />
            <size
                android:width="165dp"
                android:height="40dp" />
        </shape>

    </item> <!-- focused -->
    <item>
        <shape>
            <corners
                android:radius="20dp" />
            <solid
                android:color="@android:color/transparent" />
            <stroke
                android:color="#C39BD3"
                android:width="2dp" />
            <size
                android:width="165dp"
                android:height="40dp" />
        </shape>

    </item> <!-- default -->
</selector>